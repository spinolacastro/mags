<?xml version="1.0"?>
<config>
	<tabs>
		<magentothem translate="label" module="themeoptions">
			<label>Magentothem</label>
			<sort_order>205</sort_order>
		</magentothem>
	</tabs>
	<sections>
		<themeoptions translate="label" module="themeoptions">
			<label>Theme Options</label>
			<tab>magentothem</tab>
			<sort_order>131</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<themeoptions_config translate="label">
					<label>Theme Options Config</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>

                        <menu_style translate="label">
                            <label>Menu Style: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								themeoptions/config_menu
							</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </menu_style>
						<new_label translate="label comment">
							<label>New Label: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</new_label>
						<sale_label translate="label comment">
							<label>Sale Label: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</sale_label> 
                        <grid_product translate="label">
                            <label>Grid Product Items: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								themeoptions/config_grid
							</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </grid_product>
                        <font>
							<label>Font:</label>
							<frontend_type>select</frontend_type>
                            <source_model>themeoptions/config_customfieldfont</source_model>
							<frontend_model>themeoptions/adminhtml_system_config_form_field_customfieldfont</frontend_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</font>

					</fields>
				</themeoptions_config>						
			</groups>
		</themeoptions>
	</sections>
</config>


